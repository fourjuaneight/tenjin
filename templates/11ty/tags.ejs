  "pagination": {
    "data": "collections",
    "size": 1,
    "alias": "tag",
    "filter": ["all", "posts", "feed", "tags"],
    "addAllPagesToCollections": true
  },
  "title": "Tag Archive",
  "layout": "default",
  "permalink": "/tags/<%= tag %>/"
}
